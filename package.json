{
  "name": "blaze",
  "version": "1.0.0-beta",
  "description": "The open source CSS Framework by RiotGear",
  "main": "dist/blaze.min.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "scss": "node-sass -q --output-style compressed scss/blaze.scss dist/blaze.min.css",
    "dev": "node-sass -q --output-style compressed scss/blaze.scss dist/blaze.min.css -w scss",
    "autoprefixer": "postcss --use autoprefixer --autoprefixer.browsers \"last 2 versions\" -o dist/blaze.min.css dist/blaze.min.css",
    "clean": "cleancss -o dist/blaze.min.css dist/blaze.min.css",
    "build": "npm run scss && npm run autoprefixer && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RiotGear/blaze.git"
  },
  "keywords": [
    "webcomponents",
    "html5",
    "sass",
    "scss",
    "ui",
    "ux",
    "framework",
    "components",
    "riotgear"
  ],
  "author": "Gregory Pratt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RiotGear/blaze/issues"
  },
  "homepage": "https://riotgear.js.oblaze/blaze",
  "devDependencies": {
    "autoprefixer": "~6.1.0",
    "clean-css": "^3.4.8",
    "node-sass": "~3.4.1",
    "normalize.css": "~3.0.3",
    "postcss-cli": "~2.3.2"
  }
}
